- unless params[:search]
	%article.video_category
		- @categories.each do |category|
			.videos.row
				%header
					%h3= link_to category.name, category_path(category)
					- category.recent_videos.each do |video|
						- if video.category == category
							.video.col-sm-2
								= link_to video_path(video) do
									= image_tag video.small_cover_url
- else
	%article.video_category
		%header
			%h3 Search Results
			.videos.row
				%header
					- @videos.each do |video|
						.video.col-sm-2
							= link_to video_path(video) do
								= image_tag video.small_cover_url