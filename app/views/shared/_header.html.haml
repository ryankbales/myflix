%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX"
  - if current_user
    %ul.col-md-4.clearfix
      %li= link_to "Videos", "/home"
      %li= link_to "My Queue", "/my_queue"
      %li= link_to "People", people_path
    = form_tag videos_path, method: 'get', class: 'col-md-5 navbar-form' do
      .form-group
        = text_field_tag :search, params[:search], placeholder: "Search for a Video", class: 'form-control'
      = submit_tag "Search", class: 'btn btn-default', name: nil
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            - if current_user
              = "Welcome, #{current_user.full_name}"
            - else
              = link_to "Sign In", sign_in_path
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", sign_out_path
